
mixin contactCard(contact)
    
    li.li.row
        .float-left.col-9.align-center.d-flex.align-items-center.justify-content-between
            img(src="/uploads/avatars/" + contact.avatar).float-left
            h5.m-0= contact.name
            div= contact.mail
        .col-1.text-center
            a.d-flex.align-items-center.col-1(pato=arrIndex href='/deleteContact/' + arrIndex) ❌
        .col-1.text-center
            a(onclick='mailPopUp("'+contact.avatar +'","'+contact.name+'","'+contact.mail+ '")', pato=contact.id, data-toggle='modal', data-target='#emailModal') ✉
        .col-1.text-center
            a(onclick='mailPopUp("'+contact.id +'","'+contact.avatar +'","'+contact.name+'","'+contact.mail+ '")', pato=contact.id, data-toggle='modal', data-target='#editModal') ✏



doctype html
html
    head
        title Contact List

        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")
        style.
            body {
                background-color: #555;
                color: white;
            }
            h1 {
                margin-top: 10rem;
            }
            form {
                margin-bottom: 2rem;
            }
            .ul {
                border-top: 1px solid white;
                padding-top: 20px;
            }

            .li {
                padding-left: 5px;
                margin-bottom: 5px;
                list-style-type: none;
            }
            img{
                border-radius: 50%;
                margin-right: 10px;
                height: 42px;
                width: 42px;
            }
            a{
                color: white;
                font-weight: bold;
            }
            a:hover{
                color: #e3f2fd;
                font-weight: bold;
                text-decoration: none;
            }
    body
        main    
            // email modal
            include mail.pug
            // edit modal
            include edit.pug
            // Create contact list form
            div.container-fluid
                row
                    h1.text-center Enter your contact
                    form.col-xs-12.col-md-6.mx-auto(action='/newContact', method='POST', enctype='multipart/form-data')
                        .input-group.mb-1
                            .input-group-prepend
                            .input-group-text ...
                            input.form-control(type='text', name='name', placeholder="Enter your contact's name")
                        .input-group.mb-1
                            .input-group-prepend
                            .input-group-text @
                            input.form-control(type='email', name='email', placeholder="Enter your contact's e-mail")
                        .input-group.mb-1
                            label.custom-file-label(for='avatar') Choose file
                            input#avatar.custom-file-input(type='file', name='avatar', multiple='multiple')
                        .input-group
                            button.btn.btn-primary.btn-block(type='submit') Submit
                div.container-fluid
                    ul.col-xs-12.col-md-6.mx-auto.ul
                        each value,index in contactData
                            +contactCard(value, index)
        script.
            let mailPopUp = (id,photo, name, mail) => {
            $('.mail').val(mail);
            $('.name').text(name).val(name);
            $('.userImg').attr('src',"/uploads/avatars/" + photo);
            $('.idOfContact').val(id);
            
            console.log(name)
            }

